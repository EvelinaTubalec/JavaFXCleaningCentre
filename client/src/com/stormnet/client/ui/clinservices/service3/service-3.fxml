<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.stormnet.client.ui.clinservices.service3.Service3Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Label text="УБОРКА ОФИСОВ И ПРОИЗВОДСТВЕННЫХ ПОМЕЩЕНИЙ:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label text="•мойка окон офиса и зеркальных поверхностей;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label text="•обеспыливание всех поверхностей;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text="•уборка рабочих мест;" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label text="•чистка и мойка напольных покрытий, плинтусов, дверей, стен;" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Label text="•уборка кухонных помещений, обезжиривание бытовой техники и кухонных поверхностей;" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Label text="•уборка и мойка сан. узлов и сантехники." GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <Label text="СТОИМОСТЬ:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <Label text="Для оценки работ по мойке окон и витрин свяжитесь с нами удобным для вас способом" GridPane.columnIndex="0" GridPane.rowIndex="9"/>

    <HBox spacing="10" alignment="bottom_left" GridPane.columnIndex="0" GridPane.rowIndex="13">
        <Button text="Оставить заявку" onAction="#toOrderButtonPressed" />
    </HBox>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="13">
        <Button text="Отмена" onAction="#cancelButtonPressed" />
    </HBox>
</GridPane>
