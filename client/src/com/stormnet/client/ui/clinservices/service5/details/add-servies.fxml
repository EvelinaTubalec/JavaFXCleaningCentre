<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.stormnet.client.ui.clinservices.service5.details.AddService5Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Label text="Введите свои данные:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <Label text="Фамилия Имя:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Дата:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <DatePicker fx:id="dateOfOrderField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Адрес:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0" GridPane.rowIndex="7">
        <Button text="Заказать услугу" onAction="#addService" />
    </HBox>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Отмена" onAction="#cancelBtnPressed" />
    </HBox>
</GridPane>
