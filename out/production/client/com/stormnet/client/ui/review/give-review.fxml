<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stormnet.client.ui.review.GiveReviewController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
   <TextArea fx:id="reviewField" prefHeight="150.0" prefWidth="150.0" />

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button onAction="#giveReview" text="Оставить отзыв" />
    </HBox>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Button onAction="#cancel" text="Отмена" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints maxWidth="289.0" minWidth="236.0" prefWidth="289.0" />
      <ColumnConstraints maxWidth="53.0" minWidth="0.0" prefWidth="0.0" />
   </columnConstraints>

</GridPane>
