<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.stormnet.client.ui.clientaccount.ClientAccountController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <HBox spacing="10" alignment="bottom_left" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button text="Заказать услугу" onAction="#orderService" />
    </HBox>

    <HBox spacing="10" alignment="bottom_left" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Button text="История моих заказов" onAction="#orderHistory" />
    </HBox>

    <HBox spacing="10" alignment="bottom_left" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Button text="Оставить отзыв" onAction="#leaveReview" />
    </HBox>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Выйти" onAction="#exitButtonPressed" />
    </HBox>
</GridPane>

